
generator client {
  provider = "prisma-client-js"
}

//Database informations

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:admin@localhost:5432/manga?schema=public"
}

//Models integration for the two tables

model anime {
  id            Int     @id @default(autoincrement())
  anime_id      String? @db.VarChar(10)
  anime_name    String? @db.VarChar(100)
  anime_release String? @db.VarChar(10)
}

model anime_details {
  id           Int     @id @default(autoincrement())
  anime_id     String? @db.VarChar(10)
  anime_genre  String? @db.VarChar(50)
  anime_rating Int?
}
